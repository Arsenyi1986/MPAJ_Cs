using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {

            decimal sum = Convert.ToDecimal(Console.ReadLine());
            int t = Convert.ToInt32(Console.ReadLine());

            while (t > 0)
            {

                sum += ((sum / 100) * 7);
                Console.WriteLine(Math.Round(sum, 2));
                t--;
                
            }
            
        }
    }
}
